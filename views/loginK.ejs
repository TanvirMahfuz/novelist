<!DOCTYPE html>
<html lang="en">
<head>
   
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form And Open A New page</title>

    <style>
       body{
        background: #fc0 ;
       } 
       .div1{
        width: 350px;
        margin: auto;
        margin: 10 0 0 450px;
        overflow: hidden;
        padding: 75px;
        background: #003300;
       }
       h2{
        text-align: center;
        padding: 10px;
        color:#003300 ;
       }
       label{
        color: white;
        padding-left:10px ;
       }
       .inputText{
        width: 300px;
        height: 30px;
        border: none;
        border-radius: 2px;
        padding-left: 8px;
       }
       #logButton{
        width: 300px;
        height: 30px;
        border: none;
        border-radius: 10px;
        padding-left: 7px;
        color:black ;
        font-size: 16px;
       }
    </style>
</head>
<body>
    <h2>Login Form</h2>
    <div class="div1">
 <form name="myForm" method="post" id="login-form">
    <label >User Name</label>
    <input type="text" name="username" class="inputText" placeholder="User Name">
    <br><br>
    <label >Password</label>
    <input type="password" name="password" class="inputText" placeholder="password">
    <br><br>
    <input type="submit" name="log" id="logButton" value="Login" onclick="myFunction()">
    <br><br>
 </form>


    </div>
    <script>
      formEl = document.getElementById("login-form");
      formEl.addEventListener("submit", (e) => {
        e.preventDefault();
        const formdata = new FormData(formEl);
        const formobj = Object.fromEntries(formdata);
        fetch("/api/login", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(formobj),
        })
          .then((res) => res.json())
          .then((res) => {
            console.log(res);
            if (res.msg == "ok")
              window.location.href = "http://localhost:3000/api/home";
          });
      });
    </script>
</body>
</html>